                        <script type="text/javascript">
                            $(function () {
                                $('#idAccountManager').css('display', 'none');
                            });
                        </script> 
			        </span>		
                }
                else
                {
                    if (!String.IsNullOrEmpty(ViewBag.LoaiAccount)) 
                    {
                        @Html.HiddenFor(m => m.AccountManager, new {@Value=ViewBag.AccountParent }); 
